<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/tab_text_selected" >

    <Button
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
		android:layout_alignParentLeft="true"
		android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        android:background="@drawable/ic_back"/>
    
    <ImageView
        android:id="@+id/iv_left_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
		android:layout_toRightOf="@id/btn_back"
		android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_middle_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/title_bar_tv_size"
        android:text="@string/app_name"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/iv_first_right_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>
    
    <ImageView
        android:id="@+id/iv_second_right_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
		android:layout_toLeftOf="@id/iv_first_right_icon"
		android:layout_centerVertical="true"
        android:layout_marginRight="10dp"/>

</RelativeLayout>